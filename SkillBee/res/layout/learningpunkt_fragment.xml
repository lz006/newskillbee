<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/b"
    android:layout_height="match_parent"
    
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/InhaltShort"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Click" />

    <TextView
        android:id="@+id/LearningPunkt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:hint="Learningline"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/LearningInhaltLong"
        style="@drawable/logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/InhaltShort"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/MedienG"
        style="@drawable/logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/InhaltShort"
        android:layout_toLeftOf="@+id/InhaltShort" />

    <Button
        android:id="@+id/MedienY"
        style="@drawable/logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/InhaltShort"
        android:layout_toRightOf="@+id/InhaltShort" />

</RelativeLayout>
