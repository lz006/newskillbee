
    
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="460dp"
        android:orientation="vertical"
        >

         <TextView
             android:id="@+id/LearningPunkt2"
             android:layout_width="320dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="14dp"
             android:gravity="center"
             android:hint="Learningline"
             android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="387dp"
        android:orientation="vertical" 
        android:background="@drawable/b" 
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
             >

            <Button
                android:id="@+id/MedienY"
                android:layout_width="25dp"
                android:layout_height="25dp" 
                android:background="@drawable/youtube"
                android:layout_marginTop="33dp" 
                android:layout_marginLeft="80dp" 
                />

            <Button
                android:id="@+id/LearningInhaltLong2"
                android:layout_width="25dp"
                android:layout_height="25dp" 
                android:background="@drawable/us2"   
                android:layout_marginTop="14dp" 
                android:layout_marginLeft="42.5dp"             />

            <Button
                android:id="@+id/MedienG"
                android:layout_width="25dp"
                android:layout_height="25dp" 
                android:background="@drawable/google" 
                android:layout_marginTop="33dp" 
                android:layout_marginLeft="42.5dp"  
                />
        </LinearLayout>

        <TextView
            android:id="@+id/InhaltShort"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:hint="hallo"
            />

    </LinearLayout>
   
    </LinearLayout>

